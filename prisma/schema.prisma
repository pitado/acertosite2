generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  ADMIN
  MEMBER
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  name      String?
  avatarUrl String?

  // ✅ NOVO: para login por e-mail/senha
  passwordHash String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  ownedGroups    Group[]       @relation("UserOwnedGroups")
  memberships    GroupMember[]
  invitesCreated Invite[]      @relation("InviteCreator")

  @@map("users")
}
  createdAt DateTime @default(now())
  // ✅ evita erro em db push quando já existem linhas
  updatedAt DateTime @default(now()) @updatedAt

  // Relações
  ownedGroups    Group[]       @relation("UserOwnedGroups")
  memberships    GroupMember[]
  invitesCreated Invite[]      @relation("InviteCreator")

  @@map("users")
}

model Group {
  id          String  @id @default(cuid())
  name        String
  description String?

  ownerId String
  owner   User @relation("UserOwnedGroups", fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  members  GroupMember[]
  invites  Invite[]
  expenses Expense[]
  activity LogEntry[]

  // ✅ tabela com nome “normal” no MySQL (evita erro do GROUP)
  @@map("groups")
}

model GroupMember {
  id String @id @default(cuid())

  groupId String
  userId  String
  role    Role @default(MEMBER)

  createdAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId], name: "groupId_userId")
  @@index([groupId])
  @@index([userId])

  @@map("group_members")
}

model Invite {
  token String @id

  groupId String
  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  // opcional: se quiser convite por email específico no futuro
  email String?

  role Role @default(MEMBER)

  expiresAt DateTime?
  usedAt    DateTime?

  createdAt DateTime @default(now())

  createdById String?
  createdBy   User? @relation("InviteCreator", fields: [createdById], references: [id], onDelete: SetNull)

  @@index([groupId])
  @@index([createdById])

  @@map("invites")
}

model Expense {
  id String @id @default(cuid())

  groupId String
  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  title  String
  amount Float

  buyer String
  payer String

  // split (texto livre por enquanto)
  split        String
  participants Json

  category    String
  subcategory String?
  location    String?
  date_iso    String?

  pix_key   String?
  proof_url String?

  created_at DateTime @default(now())

  @@index([groupId])

  @@map("expenses")
}

model LogEntry {
  id String @id @default(cuid())

  groupId String
  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  message String
  created_at DateTime @default(now())

  @@index([groupId])

  @@map("log_entries")
}
