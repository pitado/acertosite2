generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @db.VarChar(191) // id do Supabase
  email     String   @unique
  name      String?
  avatarUrl String?

  groupsOwned Group[]  @relation("OwnerGroups")
  memberships Membership[]

  createdAt DateTime @default(now())
}

model Group {
  id        String   @id @default(uuid())
  name      String
  ownerId   String

  owner     User     @relation("OwnerGroups", fields: [ownerId], references: [id])
  members   Membership[]
  invites   Invite[]

  createdAt DateTime @default(now())
}

model Membership {
  id      String @id @default(uuid())
  role    Role   @default(MEMBER)

  userId  String
  groupId String

  user   User  @relation(fields: [userId], references: [id])
  group  Group @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}

model Invite {
  id        String   @id @default(uuid())
  token     String   @unique
  groupId   String
  email     String?
  expiresAt DateTime
  accepted  Boolean  @default(false)

  group Group @relation(fields: [groupId], references: [id])

  createdAt DateTime @default(now())
}

enum Role {
  OWNER
  ADMIN
  MEMBER
}
